   color_echo_n "ENTER " "red"
   color_echo_n "to return to " "yellow"
   color_echo_n "MENU!" "green"
   read
   ;;
   10)
   conexao
   exit;
   ;;
   11)
   clear
   velocity
   echo ""
   color_echo_n "ENTER " "red"
   color_echo_n "to return to " "yellow"
   color_echo_n "MENU!" "green"
   read
   ;;
   12)
   clear
   banner
   sleep 3
   ;;
   13)
   clear
   color_echo "TO EXIT CLICK CTRL + C" "green"
   sleep 4
   nload
   ;;
   14)
   clear
   otimizar
   echo ""
   color_echo_n "ENTER " "red"
   color_echo_n "to return to " "yellow"
   color_echo_n "MENU!" "green"
   read
   ;;
   15)
   userbackup
   echo ""
   color_echo_n "ENTER " "red"
   color_echo_n "to return to " "yellow"
   color_echo_n "MENU!" "green"
   read
   ;;
   16)
   limit_ssh
   ;;
   17)
   clear
   badvpn
   exit;
   ;;
   18)
   clear
   detalhes
   echo ""
   color_echo_n "ENTER " "red"
   color_echo_n "to return to " "yellow"
   color_echo_n "MENU!" "green"
   read
   ;;
   19)
   menu2
   ;;
   0 | 00)
   color_echo "Exiting..." "red"
   sleep 2
   clear
   exit;
   ;;
   *)
   echo ""
   error_msg "Invalid option !"
   sleep 2
esac
done
